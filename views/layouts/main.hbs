<body>
	<form action="/quanly" method="POST">
		<div class="login-wrap">
			<div class="login-html">
				<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign
					In</label>
				<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
				<div class="login-form">
					<div class="sign-in-htm">
						<div class="group">
							<label for="user" class="label">Email</label>
							<input id="email" type="text" class="input" name="email">
						</div>
						<div class="group">
							<label for="pass" class="label">Password</label>
							<input id="pwd" type="password" class="input" data-type="password" name="pwd">
						</div>
						<div class="group">
							<input id="check" type="checkbox" class="check" checked>
							<label for="check"><span class="icon"></span> Keep me Signed in</label>
						</div>
						<div class="group">
							<input type="submit" class="button" value="Sign In">
						</div>
						<div class="hr"></div>
						<div class="foot-lnk">
							<a href="#forgot">Forgot Password?</a>
						</div>
					</div>
	</form>
	<form action="/main" method="POST">
		<div class="sign-up-htm">
			<div class="group">
				<label for="user" class="label">Username</label>
				<input id="userSign" type="text" class="input">
			</div>
			<div class="group">
				<label for="pass" class="label">Password</label>
				<input id="passSign" type="password" class="input" data-type="password" required>


				<label for="exampleInputPassword1" class="label">Mật khẩu</label>
				<input type="password" name="passRes" class="input" id="exampleInputPassword1" required>
			</div>
			<div class="group">
				<label for="exampleInputEmail1" class="label">Email:</label>
				<input type="email" name="emailRes" class="input" id="exampleInputEmail1" required>
			</div>
			<div class="group">
				<label for="pass" class="label">Avatar</label>
				<img src="https://luv.vn/wp-content/uploads/2021/09/hinh-anh-gai-xinh-trung-quoc-71-edited.jpg"
					width="100" height="100" class="img" />
			</div>
			<div class="group">
				<input type="submit" class="button" value="Sign Up" style="margin: 20px;">
			</div>
			<div class="hr"></div>
			<div class="foot-lnk">
				<label for="tab-1">Already Member?</a>
			</div>
		</div>
